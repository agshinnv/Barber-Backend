@model ContactVM

@{
    ViewData["Title"] = "Contact";
}


@section css {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/sass/pages/contact/contact.css" rel="stylesheet" />
    <link href="~/css/themify-icons.css" rel="stylesheet" />
}



@section js {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/contact.js"></script>
}


<section id="banner-header" style="background-image: url('/images/Contact/bannerimage.jpg')">
    <div class="container-main">
        <div class="row">
            <div class="cover"></div>
            <div class="col-md-12 caption">
                <h5>Get in touch</h5>
                <h1>Contact Us</h1>
            </div>
        </div>
    </div>
</section>

<section id="contact">
    <div class="container-main">
        <div class="row">
            <div class="col-md-6">
                <div class="title">
                    <h6>Contact Info</h6>
                    <h1>Get In Touch</h1>
                    <p>Barber utate ons amet ravida haretra nuam the duru miss uctus the drana accumsan justo aliquam sit amet auctor orci done vitae.</p>
                </div>
                <div class="item">
                    <span class="icon ti-location-pin"></span>
                    <div class="content">
                        <h5>Address</h5>
                        <p>@Model.Settings["Address"]</p>
                    </div>
                </div>
                <div class="item">
                    <span class="icon ti-mobile"></span>
                    <div class="content">
                        <h5>Phone</h5>
                        <p>@Model.Settings["Phone"]</p>
                    </div>
                </div>
                <div class="item">
                    <span class="icon ti-email"></span>
                    <div class="content">
                        <h5>e-Mail</h5>
                        <p>@Model.Settings["Email"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-5 offset-md-1">
                <div class="booking-box">
                    <div class="booking-box-title">
                        <h1>Contact Form</h1>
                    </div>
                    <div class="booking-area">
                        <form action="">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-area">
                                        <input type="text" value="@Model.UserFullName" placeholder="Name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-area">
                                        <input type="text" placeholder="Phone">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-area">
                                        <input type="text" value="@Model.UserEmail" placeholder="e-Mail">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-area">
                                        <input type="text" placeholder="Subject">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <textarea name="message" id="message" cols="30" rows="4" placeholder="Message" required=""></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="make-appoint">
                                        Send Message
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="map">
    <div class="full-width">
        <div class="no-spacing map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3037.655949674995!2d49.97074325435186!3d40.416471985719895!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zNDDCsDI0JzU5LjMiTiA0OcKwNTgnMjEuMiJF!5e0!3m2!1sen!2saz!4v1721652460472!5m2!1sen!2saz" frameborder="0" class="google-maps" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </div>

</section>

