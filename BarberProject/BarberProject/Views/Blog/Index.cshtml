                    <div class="booking-box">
                        <div class="booking-box-title">
                            <h1>Leave a reply</h1>
                        </div>
                        <div class="booking-area">
                            <form action="">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-area">
                                            <input type="text" placeholder="Name *">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-area">
                                            <input type="text" placeholder="E-mail *">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <textarea name="message" id="message" cols="30" rows="4" placeholder="Comment *" required=""></textarea>
                                    </div>
                                    <div class="col-md-12">
                                        <button type="submit" class="make-appoint">
                                            Send Comment
                                        </button>
                                    </div>
                                </div>
                            </form>
