@model RegisterVM

@{
	ViewData["Title"] = "SignUp";
	Layout = null;
}


@section css {
	<link rel="stylesheet" href="~/sass/pages/Login-register/login-register.css">
}

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link rel="icon" href="~/icons/title-icon.png">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.css" integrity="sha512-X/RSQYxFb/tvuz6aNRTfKXDnQzmnzoawgEQ4X8nZNftzs8KFFH23p/BA6D2k0QCM4R0sY1DEy9MIY9b3fwi+bg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/vegas/2.5.4/vegas.min.css" integrity="sha512-fSKum0u74TzF+eAXxBS0oIp3LlON1gd++1rifA0ZnQWKP2JXbCdomS2k0BDEM7v0se7mQOpOwedRw/lRsSPAaA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.2.0/magnific-popup.min.css" integrity="sha512-lvaVbvmbHhG8cmfivxLRhemYlTT60Ly9Cc35USrpi8/m+Lf/f/T8x9kEIQq47cRj1VQIFuxTxxCcvqiQeQSHjQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/css/bootstrap-datepicker3.min.css" integrity="sha256-bZRrQVK1rYvxccX8WACyWguD6Ba0h4h/Qs6vmJP2Pws=" crossorigin="anonymous">
	<link rel="stylesheet" href="~/sass/pages/Login-register/login-register.css">
	<link href="~/css/themify-icons.css" rel="stylesheet" />

</head>



<div class="wrapper">
	<form method="post" asp-action="SignUp">
		<h2>Register</h2>
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="input-field">
			<input asp-for="FullName" type="text" autocomplete="off">
			<label>Enter your Fullname</label>
			<span class="text-danger" asp-validation-for="FullName"></span>
		</div>
		<div class="input-field">
			<input asp-for="UserName" type="text" autocomplete="off">
			<label>Enter your username</label>
			<span class="text-danger" asp-validation-for="UserName"></span>
		</div>
		<div class="input-field">
			<input asp-for="Email" type="text" autocomplete="off">
			<label>Enter your email</label>
			<span class="text-danger" asp-validation-for="Email"></span>
		</div>
		<div class="input-field">
			<input asp-for="Password" type="password" autocomplete="off">
			<label>Enter your password</label>
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>
		<div class="input-field">
			<input asp-for="ConfirmPassword" type="password" autocomplete="off">
			<label>Confirm password</label>
			<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
		</div>
		<button type="submit">Register</button>
		<div class="register">
			<p>Already have an account? <a asp-controller="Account" asp-action="SignIn">Log In</a></p>
			<p><a asp-controller="Home" asp-action="Index">Go Home</a></p>
		</div>
	</form>
</div>

