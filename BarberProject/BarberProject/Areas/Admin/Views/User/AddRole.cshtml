@model AddRoleVM

@{
    ViewData["Title"] = "AddRole";
}



<div class="container">
    <div class="table-responsive table--no-card m-b-30">
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <form method="post" asp-action="AddRole">
                <tr>
                    <td>
                        <select class="form-control" asp-items="@ViewBag.users" asp-for="UserId"></select>
                    </td>
                    <td>
                        <select class="form-control" asp-items="@ViewBag.roles" asp-for="RoleId"></select>
                    </td>
                </tr>
                <button type="submit" class="btn btn-success mb-2">Update role</button>
                </form>
            </tbody>
        </table>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>

