@model BarberPricingCreateVM

@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Create BarberPrices</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="" enctype="multipart/form-data">

                <div class="form-group">

                    <input asp-for="ServiceName" type="text" placeholder="Enter servicename..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="ServiceName"></span>

                    <label>Pricing Category</label>
                    <select class="form-control mb-3" asp-for="PricingCategoryId" asp-items="@ViewBag.pricingCategories">
                    </select>
                    
                    <input asp-for="ServiceDescription" type="text" placeholder="Enter description..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="ServiceDescription"></span>

                    <input asp-for="ServicePrice" type="number" placeholder="Enter price..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="ServicePrice"></span>

                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

