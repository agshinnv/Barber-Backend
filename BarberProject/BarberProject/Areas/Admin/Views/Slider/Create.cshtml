@model SliderCreateVM

@{
    ViewData["Title"] = "Create";
}



<div class="container mt-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">Slider</label>
            <div class="col-md-12 mt-3">
                <input autocomplete="off" asp-for="SliderTitle" type="text" maxlength="100" placeholder="Title..." class="form-control form-control-line"  />
                <span class="text-danger" asp-validation-for="SliderTitle"></span>
                <input autocomplete="off" asp-for="SliderDesc" type="text" maxlength="100" placeholder="Description..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="SliderDesc"></span>
                <input asp-for="SliderImages" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="SliderImages"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Submit</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

