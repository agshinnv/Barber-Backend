@model SliderEditVM


@{
    ViewData["Title"] = "Edit";
}



@section js {
    <script src="~/admin/js/SliderEdit.js"></script>
    <script src="https://kit.fontawesome.com/83dcd321a4.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}

@section css {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<div class="container">
    <div class="card">
        <div class="card-header text-success">
            <strong>Edit Slider</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" method="post" class="" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Title</label>
                    <input asp-for="SliderTitle" class="form-control mb-4" placeholder="Slider title...">
                    <span class="text-danger" asp-validation-for="SliderTitle"></span>

                    <label>Description</label>
                    <input asp-for="SliderDescription" class="form-control mb-4" placeholder="Slider description...">
                    <span class="text-danger" asp-validation-for="SliderDescription"></span>

                    <label>Slider Images</label>
                    <div class="slider-images" style="display:flex; gap:40px">
                        @foreach (var item in Model.ExistImages)
                        {
                            <div class="edit-image" data-id="@item.Id" data-slider-id="@item.SliderId">
                                <img src="~/images/@item.Name" />
                                <div class="slider-action">
                                    <ul style="list-style:none">
                                        <li>
                                            <a class="remove-image" style="cursor:pointer">
                                                <i class="fa-solid fa-trash text-danger"></i>
                                                <span class="tooltip-text">Remove image</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                        <div class="upload-container">
                            <label class="upload-button">
                                <input asp-for="NewSliderImages">
                            </label>
                        </div>
                        <span class="text-danger d-block" asp-validation-for="NewSliderImages"></span>
                    </div>

                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>