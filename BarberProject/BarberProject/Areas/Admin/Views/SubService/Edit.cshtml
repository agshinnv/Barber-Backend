@model SubServiceEditVM

@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Edit Sub Service</strong>
        </div>
        <div class="card-body card-block">

            <form asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
                <div class="form-group">

                    <label>Sub Service Name</label>
                    <input asp-for="SubServiceName" type="text" placeholder="Enter sub service name..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="SubServiceName"></span>

                    <label>Sub service's Service</label>
                    <select class="form-control mb-3" asp-for="ServiceId" asp-items="@ViewBag.services">
                    </select>

                    <label>Sub Service Price</label>
                    <input asp-for="SubServicePrice" type="number" placeholder="Enter price..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="SubServicePrice"></span>

                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

