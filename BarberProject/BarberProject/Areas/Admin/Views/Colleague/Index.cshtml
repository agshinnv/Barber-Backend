@model List<ColleagueVM>

@{
    ViewData["Title"] = "Colleagues Page";
}


<div class="container">

    @if (User.IsInRole("SuperAdmin"))
    {
        <div class="create-category">
            <a asp-action="Create" class="btn btn-success text-white mb-3 mx-3">Create</a>
        </div>
    }



    <div class="table-responsive table--no-card m-b-30">
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="background-color:grey; border-bottom:2px solid cyan">
                        <td><img src="~/images/@item.Image" style="width:200px" /></td>
                        <td>

                            <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline" method="post">
                                <button type="submit" class="btn btn-danger text-white">Delete</button>
                            </form>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

