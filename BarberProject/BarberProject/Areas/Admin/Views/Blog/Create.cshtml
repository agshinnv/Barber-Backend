@model BlogCreateVM

@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <div class="card">
        <div class="card-header text-success">
            <strong>Create new blog</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="" enctype="multipart/form-data">
                <div class="form-group">

                    <span class="text-danger d-block" asp-validation-for="Title"></span>
                    <input asp-for="Title" class="form-control mb-4" placeholder="Blog title...">

                    <span class="text-danger d-block" asp-validation-for="Description"></span>
                    <input asp-for="Description" class="form-control mb-4" placeholder="Blog description..." autocomplete="off">

                    <span class="text-danger d-block" asp-validation-for="Content"></span>
                    <input asp-for="Content" class="form-control mb-4" placeholder="Content description..." autocomplete="off">

                    <label>Product Category</label>
                    <select class="form-control mb-3" asp-for="ServiceId" asp-items="@ViewBag.services">
                    </select>

                    <label>Blog Images</label>
                    <span class="text-danger d-block" asp-validation-for="BlogImages"></span>
                    <input asp-for="BlogImages" class="form-control mb-2">

                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

