@model PricingCategoryEditVM

@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Edit Pricing Category</strong>
        </div>
        <div class="card-body card-block">
            <div>
                <img src="~/images/@Model.ExistImage" alt="Alternate Text" style="width:200px" />
            </div>
            <form asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
                <div class="form-group">

                    <input asp-for="Name" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="Name"></span>

                    <label class=" form-control-label">Upload new pricing category image</label>
                    <input asp-for="NewImage" class="form-control  mb-2">
                    <span class="text-danger" asp-validation-for="NewImage"></span>

                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

