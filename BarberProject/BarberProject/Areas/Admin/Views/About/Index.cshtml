@model AboutVM


@{
    ViewData["Title"] = "About Page";
}

<div class="container">

    @if (User.IsInRole("SuperAdmin"))
    {
        <div class="create-category">
            <a asp-action="Create" class="btn btn-success text-white mb-3 mx-3">Create</a>
        </div>
    }



    <div class="table-responsive table--no-card m-b-30">
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.AboutTitle</td>
                    <td>@Model.AboutDesc</td>
                    <td>
                        <a class="btn btn-info text-white" asp-route-id="@Model.Id" asp-action="Detail">Info</a>
                        <a class="btn btn-warning text-white" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <form asp-action="Delete" asp-route-id="@Model.Id" class="d-inline" method="post">
                                <button type="submit" class="btn btn-danger text-white">Delete</button>
                            </form>
                        }


                    </td>
                </tr>


            </tbody>
        </table>
    </div>
</div>

