@model AboutDetailVM

@{
    ViewData["Title"] = "Detail";
}



<div class="container">


    <div class="table-responsive table--no-card m-b-30">
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Title</td>
                    <td>@Model.AboutTitle</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.AboutDesc</td>
                </tr>
                <tr>
                    <td>Pro1</td>
                    <td>@Model.AboutPro1</td>
                </tr>
                <tr>
                    <td>Pro2</td>
                    <td>@Model.AboutPro2</td>
                </tr>
                <tr>
                    <td>Pro3</td>
                    <td>@Model.AboutPro3</td>
                </tr>
                <tr>
                    <td>Image</td>
                    <td>
                        <div class="product-images justify-content-center">
                            @foreach (var item in Model.AboutImages)
                            {
                                <div class="edit-image bg-light" style="width:200px;">
                                    <img src="~/images/@item.Image" />
                                </div>
                                <br />
                            }
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    <a asp-action="Index" class="btn btn-danger">Back</a>

</div>










