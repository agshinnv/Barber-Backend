@model AboutEditVM

@{
    ViewData["Title"] = "Edit";
}

@section js {
    <script src="~/admin/js/AboutEdit.js"></script>
    <script src="https://kit.fontawesome.com/83dcd321a4.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}

@section css {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Edit About</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
                <div class="form-group">
                    <label class=" form-control-label">Enter about title</label>
                    <input asp-for="AboutTitle" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="AboutTitle"></span>

                    <label class=" form-control-label">Enter about description</label>
                    <input asp-for="AboutDesc" type="text" placeholder="Enter here..." class="form-control  mb-2" autocomplete="off">
                    <span class="text-danger" asp-validation-for="AboutDesc"></span>

                    <label class=" form-control-label">Enter about pro1</label>
                    <input asp-for="AboutPro1" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="AboutPro1"></span>

                    <label class=" form-control-label">Enter about pro2</label>
                    <input asp-for="AboutPro2" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="AboutPro2"></span>

                    <label class="form-control-label">Enter about pro3</label>
                    <input asp-for="AboutPro3" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="AboutPro3"></span>

                    <label>About Images</label>
                    <div class="about-images" style="display:flex; gap:40px">
                        @foreach (var item in Model.ExistImages)
                        {
                            <div class="edit-image" data-id="@item.Id" data-about-id="@item.AboutId">
                                <img src="~/images/@item.Name" />
                                <div class="about-action">
                                    <ul style="list-style:none">
                                        <li>
                                            <a class="remove-image" style="cursor:pointer">
                                                <i class="fa-solid fa-trash text-danger"></i>
                                                <span class="tooltip-text">Remove image</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                        <div class="upload-container">
                            <label class="upload-button">
                                <input asp-for="NewAboutImages">
                            </label>
                        </div>
                        <span class="text-danger d-block" asp-validation-for="NewAboutImages"></span>
                    </div>

                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

