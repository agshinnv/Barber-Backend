@model BarberServiceDetailVM

@{
    ViewData["Title"] = "Detail";
}



<div class="container">


    <div class="table-responsive table--no-card m-b-30">
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th>Service Name</th>
                    <th>Service Image</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Icon Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ServiceName</td>
                    <td><img src="~/images/@Model.ServiceImage" style="width:200px" /></td>
                    <td>@Model.Description</td>
                    <td>@Model.Price$</td>
                    <td><img src="~/images/@Model.IconImage" style="width:85px" /></td>
                </tr>
            </tbody>
        </table>
    </div>

    <a asp-action="Index" class="btn btn-danger">Back</a>

</div>


