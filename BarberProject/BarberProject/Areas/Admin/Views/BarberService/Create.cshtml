@model BarberServiceCreateVM

@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Create Barber Service</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="" enctype="multipart/form-data">

                <div class="form-group">

                    <input asp-for="ServiceName" type="text" placeholder="Enter service name..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="ServiceName"></span>

                    <input asp-for="ServiceDescription" type="text" placeholder="Enter description..." class="form-control  mb-2" autocomplete="off">
                    <span class="text-danger" asp-validation-for="ServiceDescription"></span>

                    <label class=" form-control-label">Upload service image</label>
                    <input asp-for="ServiceImage" class="form-control mb-2">
                    <span class="text-danger" asp-validation-for="ServiceImage"></span>

                    <input asp-for="Price" type="number" placeholder="Enter price..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="Price"></span>

                    <label class=" form-control-label">Upload icon image</label>
                    <input asp-for="IconImage" class="form-control mb-2">
                    <span class="text-danger" asp-validation-for="IconImage"></span>


                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

