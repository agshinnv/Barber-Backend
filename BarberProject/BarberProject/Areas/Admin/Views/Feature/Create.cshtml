@model FeatureCreateVM

@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Create Feature</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="" enctype="multipart/form-data">

                <div class="form-group">

                    <label class=" form-control-label">Enter feature title</label>
                    <input asp-for="ServiceName" type="text" placeholder="Enter servicename..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="ServiceName"></span>

                    <label class=" form-control-label">Enter feature description</label>
                    <input asp-for="Description" type="text" placeholder="Enter description..." class="form-control  mb-2" maxlength="100" autocomplete="off">
                    <span class="text-danger" asp-validation-for="Description"></span>

                    <label class=" form-control-label">Enter feature image</label>
                    <input asp-for="Image" class="form-control mb-2">
                    <span class="text-danger" asp-validation-for="Image"></span>

                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


