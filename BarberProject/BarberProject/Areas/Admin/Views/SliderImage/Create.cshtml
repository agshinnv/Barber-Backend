@model SliderImageCreateVM

@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Create Slider Image</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="" enctype="multipart/form-data">
                <div class="form-group">

                    <label class="d-block form-control-label">Upload slider image</label>
                    <input asp-for="SliderImages" class="form-control  mb-2">
                    <span class="text-danger" asp-validation-for="SliderImages"></span>
                </div>
                <div class="form-group mt-3">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

