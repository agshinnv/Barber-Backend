@model HistoryDetailVM

@{
    ViewData["Title"] = "Detail";
}


<div class="container">


    <div class="table-responsive table--no-card m-b-30">
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Up Title</td>
                    <td>@Model.UpTitle</td>
                </tr>
                <tr>
                    <td>Main Title</td>
                    <td>@Model.MainTitle</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td style="white-space: normal;">@Model.Description</td>
                </tr>
                <tr>
                    <td>Image</td>
                    <td><img src="~/images/@Model.Image" style="width:200px" /></td>
                </tr>
            </tbody>
        </table>
    </div>


    <a asp-action="Index" class="btn btn-danger">Back</a>

</div>

